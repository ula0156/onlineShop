<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eclipse</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" rel="stylesheet" />
    @model onlineShopWeb.Models.HomeViewModel

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

</head>
<body>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-muted">Books Genres</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3" id="project1">
                <a href='@Url.Action("Index", "Books", new { genre = "adventure"})'>
                    <img src='@Url.Content("~/Assets/Images/adventure.png")' class="img-responsive img-thumbnail image center-block" alt="book image"/>
                </a>
                <p>Adventure</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Books", new { genre = "fiction"})'>
                    <img src='@Url.Content("~/Assets/Images/fiction.png")' class="img-responsive img-thumbnail image center-block" alt="book image" />
                </a>                
                <p>Fiction</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Books", new { genre = "sci-fi"})'>
                    <img src='@Url.Content("~/Assets/Images/sci-fi.png")' class="img-responsive img-thumbnail image center-block" alt="book image" />
                </a>                
                <p>Sci-Fi</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Books", new { genre = "romance"})'>
                    <img src='@Url.Content("~/Assets/Images/romance.png")' class="img-responsive img-thumbnail image center-block" alt="book image" />
                </a>                
                <p>Romance</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-muted">Music Genres</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Songs", new {genre = "electronic"})'>
                    <img src='@Url.Content("~/Assets/Images/electronic.png")' class="img-responsive img-thumbnail image center-block" alt="album image" />
                </a>                
                <p>Electronic</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Songs", new {genre = "jazz"})'>
                    <img src='@Url.Content("~/Assets/Images/jazz.png")' class="img-responsive img-thumbnail image center-block" alt="album image" />
                </a>                  
                <p>Jazz</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Songs", new { genre = "soundtrack" })'>
                    <img src='@Url.Content("~/Assets/Images/soundtrack.png")' class="img-responsive img-thumbnail image center-block" alt="album image" />
                </a>                  
                <p>Soundtrack</p>
            </div>
            <div class="col-md-3">
                <a href='@Url.Action("Index", "Songs", new {genre = "hip-hop"})'>
                    <img src='@Url.Content("~/Assets/Images/hip-hop.png")' class="img-responsive img-thumbnail image center-block" alt="album image" />
                </a>                  
                <p>Hip-Hop</p>
            </div>
        </div>
    </div>
</body>
</html>


