@model onlineShop.Products.Book
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li><a href='@Url.Action("Index", "Home")'> Home </a> <span class="divider">/</span></li>
        <li><a href='@Url.Action("Index", "Books", new { genre = Model.Genre})'>Genre</a> <span class="divider">/</span></li>
        <li class="active">Preview</li>
    </ul>
    <div class="well well-small">
        <div class="row-fluid">
            <div class="span3">
                <div id="myCarousel" class="carousel slide cntr">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="/@Html.DisplayFor(model => model.ImagePath)" alt="" style="width:100%">
                        </div>
                    </div>
                </div>
            </div>
            <div class="span7">

                <table class="table table-striped" summary="Bibliographic Details">
                    <tr>
                        <th>Main Author: </th>
                        <td property="author">@Html.DisplayFor(model => model.Author)</td>
                    </tr>
                    <tr>
                        <th>Format: </th>
                        <td>
                            <span class="iconlabel book">Book</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Published: </th>
                        <td>
                            <span property="publisher" typeof="Organization">
                                <span property="location">New York :</span>
                                <span property="name">Riverhead Books,</span>
                            </span>
                            <span property="publicationDate">2015.</span>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <th>Physical Description: </th>
                        <td>
                            @Html.DisplayFor(model => model.NumberOfPages) pages ; @Html.DisplayFor(model => model.Size.Height)cm<br />
                        </td>
                    </tr>
                    <tr>
                        <th>Genre: </th>
                        <td>
                            @Html.DisplayFor(model => model.Genre)
                        </td>
                    </tr>
                    <tr>
                        <th>Price: </th>
                        <td>
                            <strong>$@Html.DisplayFor(model => model.Price)</strong>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <a class="shopBtn" href='@Url.Action("AddToCart", "Cart", new { Id = Model.Id})' /><span style="font-weight:bold" class="icon-shopping-cart"> Add to cart</span>
                        </th>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>