@model IEnumerable<onlineShop.Products.Song>

@{
    <link href="~/Content/style.css" rel="stylesheet" />
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table personalizeTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="icon" src="~/Assets/Images/song.png" />
            @Html.ActionLink(item.Name, "Details", new { id = item.Id }, null) 
        </td>
        <td>
            @Html.ActionLink(item.Artist, "Index", "Search", new { searchText = item.Artist }, null)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Add to cart", "AddToCart","Cart", new { id=item.Id }, null) 
        </td>
    </tr>
}

</table>
